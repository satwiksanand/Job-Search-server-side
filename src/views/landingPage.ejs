<div class="landing-page">
  <div>
    <h1>A comprehensive platform for reliable</h1>
    <h3>Get Job Oppurtinites and Internships</h3>
    <p>Get Discovered Get Hired</p>
    <div>
      <a href="/jobs" class="btn-like">I'm a Job Seeker</a>
      <button class="register">I'm a Recruiter</button>
    </div>
  </div>
  <div class="image-container">
    <img
      src="https://th.bing.com/th/id/OIP.1oD8GeMIZVxP3n5xa_aC9QHaHa?w=210&h=360&c=7&r=0&o=5&dpr=1.3&pid=1.7"
      alt="developer image"
    />
  </div>
</div>
<div class="overlay">
  <div class="modalForm">
    <div class="top-bar">
      <p style="color: green; font-size: 20px">Experience Easily!</p>
      <a href="/jobs"><i class="fa-solid fa-xmark"></i></a>
    </div>
    <form method="POST" action="/register" class="register-form">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          class="form-control"
          type="email"
          id="email"
          name="email"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Contact</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
        />
      </div>
      <button type="submit" class="btn btn-primary">Register</button>
    </form>
    <p class="login-btn-container">
      Already Registered? <button class="btn-login">Login</button>
    </p>
    <form action="/login" method="POST" class="login-form">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          class="form-control"
          type="email"
          id="email"
          name="email"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
        />
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
  </div>
</div>
<script>
  $(document).ready(function () {
    // Hide the modal initially
    $(".overlay").hide();
    $(".login-form").hide();

    // Click event for the "Apply Now" link
    $(".register").click(function (e) {
      e.preventDefault();
      // Toggle the visibility of the modal
      $(".overlay").toggle();
    });

    $(".btn-login").click(function (e) {
      e.preventDefault();
      // Toggle the visibility of the modal
      $(".register-form").hide();
      $(".login-form").toggle();
      $(".login-btn-container").hide();
    });

    // Click event for the close button in the modal
    $(".top-bar a").click(function (e) {
      e.preventDefault();
      // Hide the modal when the close button is clicked
      $(".overlay").hide();
    });
  });
</script>
